<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.myparkea.micuenta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="16dp">

    <fragment
        android:id="@+id/frag_head2"
        android:name="com.example.myparkea.Fragmenthead2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_fragmenthead2" />

    </LinearLayout>

    <EditText
        android:id="@+id/textUpdates"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/inputs"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColorHint="#655C5C"
        android:hint="@string/updateEdit" />

    <Button
        android:id="@+id/UpdateBoton"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_redondeado_while"
        android:text="@string/updateBoton" />

</LinearLayout>